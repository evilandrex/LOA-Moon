{
    "version": 2,
    "builds": [
        {
            "src": "../frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "../backend/loa-moon/static/frontend",
                "buildCommand": "npm install --prefix ../frontend && npm run build --prefix ../frontend"
            }
        },
        {
            "src": "manage.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "50mb"
            }
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/loa-moon/static/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/loa-moon/static/frontend/$1"
        }
    ]
}
